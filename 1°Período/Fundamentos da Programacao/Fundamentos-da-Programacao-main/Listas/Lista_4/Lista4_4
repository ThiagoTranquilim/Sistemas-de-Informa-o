programa
{
	
	funcao inicio()
	{
		inteiro limite_inf, limite_max, n_par, contador
		real soma

		soma = 0.0
		escreva("Qual o limite inferior? ")
		leia(limite_inf)
		escreva("Qual o limite maximo? ")
		leia(limite_max)
		
		para (contador = limite_inf; contador <= limite_max; contador++) {
			se (contador % 2 == 0) {
				escreva(contador+"\n")
				soma = soma + contador
			}
		}
		escreva("A soma total Ã©: ")
		escreva(soma)
	}
}
